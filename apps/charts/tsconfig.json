{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "types": ["@cloudflare/workers-types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@potato/ui/*": ["../../packages/ui/src/*"],
      "@potato/database-users": ["../../packages/database-users/src/index.ts"],
      "@potato/database-users/*": ["../../packages/database-users/src/*"],
      "@potato/database-charts": ["../../packages/database-charts/src/index.ts"],
      "@potato/database-charts/*": ["../../packages/database-charts/src/*"],
      "@potato/auth": ["../../packages/auth/src/index.ts"],
      "@potato/auth/*": ["../../packages/auth/src/*"],
      "@potato/ai": ["../../packages/ai/src/index.ts"],
      "@potato/ai/*": ["../../packages/ai/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
