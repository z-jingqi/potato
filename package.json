{
  "name": "potato-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:diet": "pnpm --filter diet dev",
    "dev:charts": "pnpm --filter charts dev",
    "build:diet": "pnpm --filter diet build",
    "build:charts": "pnpm --filter charts build",
    "build:all": "pnpm -r --filter './apps/*' build",
    "lint:diet": "pnpm --filter diet lint",
    "lint:charts": "pnpm --filter charts lint",
    "preview:diet": "pnpm --filter diet preview",
    "preview:charts": "pnpm --filter charts preview",
    "pages:build:diet": "pnpm --filter diet pages:build",
    "pages:build:charts": "pnpm --filter charts pages:build",
    "deploy:diet": "pnpm --filter diet pages:deploy",
    "deploy:charts": "pnpm --filter charts pages:deploy",
    "db:generate": "pnpm --filter '@potato/database-*' db:generate",
    "db:push": "pnpm --filter '@potato/database-*' db:push",
    "db:studio:users": "pnpm --filter @potato/database-users db:studio",
    "db:studio:diet": "pnpm --filter @potato/database-diet db:studio",
    "db:studio:charts": "pnpm --filter @potato/database-charts db:studio",
    "clean": "rm -rf node_modules apps/*/node_modules apps/*/.next packages/*/node_modules"
  },
  "devDependencies": {
    "@potato/eslint-config": "workspace:*",
    "@potato/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
